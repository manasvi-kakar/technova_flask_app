pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/manasvi-kakar/technova_flask_app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t technova_app .'
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    bat 'docker tag technova_app lakshay276/technova_app:latest'
                    
                    bat 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'

                    bat 'docker push lakshay276/technova_app:latest'
                }
            }
        }

        stage('Run Container') {
            steps {
                bat 'docker run -d -p 5000:5000 technova_app'
            }
        }
    }
}
